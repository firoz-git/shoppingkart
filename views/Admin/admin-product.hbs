<section>
  <div class="container">
    <div class="row mt-3">
      <a href="/admin/add-product" class="btn btn-success ml-auto">Add product</a>
    </div>
    <table class="table mt-4">
      <thead>
        <tr>
          <th scope="col">No</th>
          <th scope="col">Name</th>
          <th scope="col">Category</th>
          <th scope="col">Description</th>
          <th>Image</th>
        </tr>
      </thead>
      <tbody>
        {{#each products}}
          <tr>
            <th scope="row">1</th>
            <td>{{this.name}}</td>
            <td>{{this.category}}</td>
            <td>{{this.description}}</td>
            <td>
              <img
                style="width: 50px;height: 50px;"
                src="/images/{{this._id}}.jpg"  alt="No image" />
            </td>
            <td><a href="/admin/edit?id={{this._id}}" class="btn btn-primary">Edit</a>
            <a href="/admin/delete?id={{this._id}}" class="btn btn-danger" onclick="return confirm('Are you sure about to delete {{this.name}} ?')">Delete</a>
            </td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</section>