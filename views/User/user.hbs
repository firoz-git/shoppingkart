
    <section>
      <div class="container">
        <div class="row"> <!-- ithan row define cheytha cls row il aan namukk operation nadakkendath-->
          
          {{#each products}}  
              <div class="col-md-3 p-3">
            <div class="card" style="width: 15rem; height:24rem">
              <img
                class="card-img-top" style="height: 190px;;weight: 70px;"
                src="/images/{{this._id}}.jpg" 
                alt="Card image cap"
                style="height: 12rem;" />
              <div class="card-body">
                <h5 class="{card-title}">{{this.name}}</h5>
                <p class="card-text">{{this.description}}</p>
                <a href="#" class="btn btn-primary">Add to Cart</a>
              </div>
            </div>
          </div>
          {{/each}}
        
        </div>
      </div>
    </section>

    