<section>
    <div class="container">
        <table class="table mt-5">
            <thead>
                <tr>
                    <th scope="col">Item</th>
                    <th scope="col">Title</th>
                    <th scope="col">Price</th>
                    <th scope="col">Quantity</th>

                </tr>
            </thead>
            <tbody>
                {{#each products}}
                    <tr>

                        <td><img style="width:70px;height:70px" src="/images/{{this.product._id}}.jpg" alt=""></td>
                        <td>{{this.product.name}}</td>
                        <td>{{this.product.price}}</td>
                        <td><button class="cart-item-count mr-3" onclick="changeQuantity('{{this._id}}','{{this.item}}',-1)" >-</button>
                        <span class="badge badge-success" id="{{this.item}}">{{this.quantity}}</span>
                        <button class="cart-item-count ml-3" onclick="changeQuantity('{{this._id}}','{{this.item}}',1,{{this.product.price}})">+</button></td>
                        <td><a href="" class="btn btn-danger" onclick="changeQuantity('{{this._id}}','{{this.item}}',-1,-{{this.product.price}})">Remove</a></td>
                    </tr>
                {{/each}}

                
            </tbody>
        </table>
        <hr>
          <a href="/place-order/{{amount}}" type="button" class="btn btn-primary float-right mt-2">Place Order</a>
        <h3>Total :
            <span  id="total">{{amount}}</span>  
        </h3>  <!--26,27-->

</section>

